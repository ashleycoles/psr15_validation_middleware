    "homepage": "https://github.com/ashleycoles/tdd-validation_middleware",
    "require": {
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.6",
        "squizlabs/php_codesniffer": "^3.6",
        "middlewares/utils": "^3.3",
        "guzzlehttp/psr7": "^2.2"
